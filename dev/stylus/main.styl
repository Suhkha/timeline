$whiskey = #d2ab66

.container--custom
	width 80% !important
		
.owl-nav
	margin-top -30px
	position relative
	
.owl-prev
	background url('../img/prev.png') no-repeat !important
	color transparent
	float left
	margin-left -35px
	
.owl-next
	background url('../img/next.png') no-repeat !important
	color transparent
	float right
	margin-right -35px
	
.timeline
	position relative
	&&--year
		width 100px !important
		margin-left 0px !important
		margin-right 10px !important
	a
		color $whiskey
		text-decoration none
		text-align center
		font-size 24px
		display block	
	span
	&&--left-line
		border solid 1px $whiskey
		height 40px
		display inline-block
		margin-bottom -65px 
		margin-top 60px
		
.timeline--big-line
	border solid 5px $whiskey
	width 100%
	height 10px
	margin-top 30px
	